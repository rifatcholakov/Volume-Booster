{
    "name": "Easy Volume Booster",
    "version": "1.0",
    "manifest_version": 3,
    "description": "Simple and effective volume control. Boost any tab's audio up to 900%.",
    "author": "Rifat Cholakov",
    "permissions": [
        "activeTab",
        "tabCapture",
        "tabs",
        "storage",
        "offscreen"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_title": "Volume Control"
    },
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}